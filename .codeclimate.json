{
    "version": "2",
    "checks": {
        "method-complexity": {
            "config": {
                "threshold": 6
            }
        },
        "file-lines": {
            "config": {
                "threshold": 300
            }
        }
    },
    "exclude_patterns": [
        "**/politica/",
        "**/tests/",
        "**/migrations/",
        "**/*mock.py",
        "**/*.js"
    ]
}